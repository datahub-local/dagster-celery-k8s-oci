{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":semanticCommits"
  ],
  "automerge": false,
  "prCreation": "immediate",
  "automergeStrategy": "squash",
  "forkProcessing": "enabled",
  "managerFilePatterns": [
    "/(^|/)pyproject\\.toml$/"
  ],
  "ignorePaths": [
    "**/.github/**",
    "**/Dockerfile"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "pypi"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "lockFileMaintenance": {
        "enabled": true
      },
      "groupName": "all non-major Python dependencies ({{ lookup (split (lowercase releaseTimestamp) 't') 0 }})",
      "groupSlug": "all-minor-patch-python"
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)pyproject\\.toml$/"
      ],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "version = \"(?<currentValue>[0-9.]+)\""
      ],
      "datasourceTemplate": "pypi",
      "depNameTemplate": "dagster",
      "autoReplaceStringTemplate": "version = \"{{newValue}}\""
    }
  ]
}